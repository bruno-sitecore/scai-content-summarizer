{
    "manifest_version" : 3,
    "name": "Hack to the Future: Content Summarizer",
    "version": "1.0.0",
    "icons": {
        "16": "src/images/icons/scai-16.png",
        "128": "src/images/icons/scai-128.png"
    },

    "permissions": [ "sidePanel" ],

    "content_scripts": [],

    "background": {
        "service_worker": "src/service-worker.js",
        "type": "module"
    },

    "side_panel": { 
        "default_path": "src/sidepanel.html"
    },

    "action": {
        "default_title": "Click to Open Panel"
    }
}